#!/usr/bin/env node
var trmcol = require('../src')

var d = new Date()
d.setTime(d.getTime() - 300 * 60000) // Forzar hora colombiana

trmcol.query()
.then(trm => {
  console.log(`La TRM del dÃ­a ('${d.toDateString()}') es $${trm.value}`)
})
.catch(err => {
  console.error(err);
  process.exit(0)
})